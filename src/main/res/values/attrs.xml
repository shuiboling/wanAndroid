<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FlowLayoutRVersion">
        <attr name="margin_horizontal" format="dimension"/>
        <attr name="margin_vertical" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ThreeCircle">
        <attr name="first_circle_color" format="color"/>
        <attr name="second_circle_color" format="color"/>
        <attr name="third_circle_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="NumberRainItem">
        <attr name="normal_color" format="color"/>
        <attr name="height_light_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="charType" format="integer"/>
        <attr name="type">
            <enum name="number" value="0"/>
            <enum name="tang" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundView">
        <attr name="raduis" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="WordSettingBar">
        <attr name="smallCircleRadius" format="dimension"/>
        <attr name="bigCircleRadius" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="bigCircleColor" format="color"/>
        <attr name="cellNumber" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DotsLoading">
        <attr name="dots_padding" format="dimension"/>
        <attr name="dots_radius" format="dimension"/>
        <attr name="dots_count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

<!--    <attr name="text_size" format="reference|dimension"/>-->

</resources>